<%-include("../partials/header")%>

<div class="container">
  <div class="row">
    <h1 style="text-align: center" class="login">Login</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/patient/login" method="post">
            <div class="form-group">
				<label for="email">Email-Id:</label>
                <input class="form-control" id="email" type="email" name="email" placeholder="E-Mail Id">
            </div>
            <div class="form-group">
				<label for="passwprd">Password:</label>
                <input class="form-control" id="passwprd" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </div>
        </form>
        <p>
			<a href="/" class="login">Go Back</a>
		    <a class="pull-right login" href="#">Forgot Password?</a>
		</p>
		<p>
			<a class="pull-right login" href="/patient/register" class="login">SIGN-UP</a>
		</p>
    </div>
  </div>
</div>

<%-include("../partials/footer")%>
